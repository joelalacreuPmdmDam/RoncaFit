<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.DetalleEjercicioFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Título del ejercicio -->
        <TextView
            android:id="@+id/tv_nombreEjercicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del Ejercicio"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:paddingBottom="24dp" />

        <!-- Series -->
        <TextView
            android:id="@+id/tv_series"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Series: 3"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:paddingTop="12dp"
            android:paddingBottom="12dp" />

        <!-- Repeticiones -->
        <TextView
            android:id="@+id/tv_repeticiones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Repeticiones: 12-15"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:paddingTop="12dp"
            android:paddingBottom="12dp" />

        <!-- Descripción -->
        <TextView
            android:id="@+id/tv_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción: Ejercicio para fortalecer la espalda."
            android:textSize="20sp"
            android:textColor="@color/black"
            android:paddingTop="12dp"
            android:paddingBottom="12dp" />

        <!-- Instrucciones -->
        <TextView
            android:id="@+id/tv_instrucciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Instrucciones: Mantén la espalda recta y el core activado."
            android:textSize="20sp"
            android:textColor="@color/black"
            android:paddingTop="12dp"
            android:paddingBottom="16dp" />

        <androidx.media3.ui.PlayerView
            android:id="@+id/vv_video"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:background="#000000"
            app:use_controller="true"
            app:resize_mode="fit"
            app:show_timeout="3000" />


    </LinearLayout>

</ScrollView>