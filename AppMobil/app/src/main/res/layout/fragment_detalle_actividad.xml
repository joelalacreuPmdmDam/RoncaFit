<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#f5f5f5">

    <!-- CardView para encapsular los detalles de la actividad -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:backgroundTint="@color/colorPrimary"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDetNombreAct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CROSSFIT"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorBackground" />

            <TextView
                android:id="@+id/tvDetInstructorAct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sergio Galera Sancho"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:textColor="@color/colorBackground"
                android:drawableStart="@drawable/ic_instructor"
                android:drawablePadding="8dp"
            />


            <TextView
                android:id="@+id/tvDetFechaAct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024-09-15 17:00:00"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:textColor="@color/colorBackground"
                android:drawableStart="@drawable/ic_clock"
                android:drawableTint="@color/colorBackground"
                android:drawablePadding="8dp"/>

            <TextView
                android:id="@+id/tvDetInscripcionesAct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2/20 reservadas"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:textColor="@color/colorBackground"
                android:drawableStart="@drawable/ic_inscripciones"
                android:drawablePadding="8dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_reservarAct"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/reservar"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="8dp" />

</LinearLayout>
